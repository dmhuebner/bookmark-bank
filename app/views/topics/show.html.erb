<header class="row">
	<div class="col-sm-8">
		<h1 class="text-center"><%= @topic.title %></h1>
	</div>
	<div class="col-sm-4">
		<%= link_to "Edit Topic", edit_topic_path, class: "btn btn-default btn-lg edit-topic-btn" %>
		<%= link_to "Delete Topic", @topic, method: :delete, class: "btn btn-danger btn-sm delete-topic-btn", data: {confirm: "Are you sure you want to delete the topic, \"#{@topic.title}\"?"} %>
	</div>
</header>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<hr />
		<ul class="bookmark-list">
			<li>Bookmarks go here</li>
		</ul>
	</div>
</div>
