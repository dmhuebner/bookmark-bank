<header class="row">
	<div class="col-sm-8">
		<h1 class="text-center"><%= @topic.title %></h1>
	</div>
	<div class="col-sm-4">
		<%= link_to "Edit Topic", edit_topic_path, class: "btn btn-default btn-lg edit-topic-btn" %>
		<%= link_to "Delete Topic", @topic, method: :delete, class: "btn btn-danger btn-sm delete-topic-btn", data: {confirm: "Are you sure you want to delete the topic, \"#{@topic.title}\"?"} %>
	</div>
</header>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<hr />
		<div class="text-center"><%= link_to "Add Bookmark", new_topic_bookmark_path(@topic), class: "btn btn-primary btn-lg" %></div>
		<hr />
		<% @topic.bookmarks.each do |b| %>
			<div class="row">
				<div class="col-sm-10">
					<h4><%= link_to b.name, b.url, target: "_blank" %> - <%= link_to b.url, b.url, target: "_blank" %><small class="text-muted"> - <%= b.description %></small></h4>
				</div>
				<div class="col-sm-2">
					<%= link_to "Edit", edit_topic_bookmark_path(@topic, b), class: "btn btn-default btn-xs" %>
					<%= link_to "Delete", topic_bookmark_path(@topic, b), method: :delete, data: {confirm: "Are you sure you want to delete the \"#{b.name}\" bookmark?"}, class: "btn btn-danger btn-xs" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
